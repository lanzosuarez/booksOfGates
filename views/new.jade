extends layout

block content

	section#newBody
		.hero-body.content
			form#myForm(method='post' enctype='multipart/form-data')

				.container
					.section.new-header
						.container
							.columns
								.column
									span.title.is-3.is-white Favorite Books
									|           
									span.title.is-3.has-text-muted &nbsp;|&nbsp;
									|   
									span.title.is-4.has-text-muted New Book
						|  
					.section.newBook 
						.container
							.columns
								.column.is-auto
									.container
										.photo_submit-container
											.photo_submit-container
												label.photo_submit.js-photo_submit1
													input.photo_submit-input.js-photo_submit-input#bookImg(type='file', accept='image/*', name='myImage')
													|             
													span.photo_submit-plus
													|             
													span.photo_submit-uploadLabel Upload photo
													|             
													span.photo_submit-delete
								.column.is-8
									.box.content.boxColor
										input.input#imageUrl(type='hidden', name='imageUrl')
										h4.label Name:
										p.control
											input.input(type='text', placeholder='Book Title' name='title' required)
										| 
										h4.label Author:              
										p.control
											input.input(type='text', placeholder='Author' name='author' required)
										|   
										h4.label Year Published:                 
										p.control
											input.input(type='text', placeholder='Year Published' name='published' required)
										| 
										h4.label Amazon Link:  
										p.control
											input.input(type='text', placeholder='Amazon Link' name='link' required)
										| 
										h4.label Kindle Price:  
										p.control
											input.input(type='text', placeholder='Kindle Price' name='price' required)
										|  
										hr
										h4.label Book Description:  
										p.control
											textarea.textarea.is-hovered(placeholder='Book Description' name='description' required)
										|               
										hr
										|               
										p.control
											button.button.is-primary#submitButton(type='submit') Save 
											|  &nbsp; &nbsp; &nbsp;
											|                         
											button.button.is-default Cancel

