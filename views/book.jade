extends layout

block content
	#newBody
		.section.new-header
			.container
				.columns
					.column
						span.title.is-3.is-white Favorite Books
						|           
						span.title.is-3.has-text-muted &nbsp;|&nbsp;
						|   
						span.title.is-4.has-text-muted= favYear
			|   
		.section.viewBook
			.container
				.columns
					.column.is-3
						.container.marginb
							ul.align2
								// Book 1
								li
									figure.book
										// Front
										ul.hardcover_front
											li
												img(src='#{book.imageUrl}', alt='',)#imgBook
												span.ribbon.bestseller Nï¿½1
											li
										// Pages
										ul.page
											li
											li
											li
											li
											li
										// Back
										ul.hardcover_back
											li
											li
										ul.book_spine
											li
											li
							.container
								.column.editButton
									a.button.is-primary#edit(href='/books/edit/#{book._id}#{token}') Edit Book
									a.button.is-danger#delete(href='/books/delete/#{book._id}#{token}') Delete
							|           	
					|         
					.column.is-8.is-offset-1
						.title.is-2.is-white= book.title
						|           
						p.title.is-3.has-text-muted= book.price
						|           
						hr
						|           
						br
						|           
						p.is-white(align="justify")= book.description
						|           
						br
						|           
						br
						|           
					
						br
						|  
						table.table
							tbody
								tr
									td.has-text-right
										strong.is-bl Amazon Link
									|                 
									td.is-tdsize= book.link
								|   
								tr
									td.has-text-right
										strong.is-bl Year Published
									|                 
									td.is-tdsize= book.published
								|               
								tr
									td.has-text-right
										strong.is-bl Date Created
									|   
									- var date = month+" "+book.createDate.getDate()+", "+book.createDate.getFullYear()          
									td.is-tdsize= date
								|               
								tr
									td.has-text-right
										strong.is-bl Date Updated
									|  
									- var update = Math.ceil((Date.now()- book.updateDate)/86400000)
									- var day = update>1?'days':'day'               
									td.is-tdsize #{update} #{day} ago
								|               
								tr
						
					
